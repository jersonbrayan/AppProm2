    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.v2.jbp.appprom2.ConfigProm"
    android:orientation="vertical"
    android:id="@+id/mTable"
    android:background="#452bff24">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mGrid"
        android:columnCount="2"
        android:rowCount="62"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="20"
                android:columnCount="2"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/mgrilla"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:id="@+id/textView1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_row="0"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tCurso"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de Notas"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Spinner
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cboNum"
                    android:layout_marginLeft="25dp"
                    android:entries="@array/Numeros"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginBottom="40dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="0"
                    android:layout_columnSpan="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nota 1"
                        android:id="@+id/textView3"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:layout_alignBaseline="@+id/editText4"
                        android:layout_marginBottom="20dip"
                        android:layout_marginRight="10dip" />

                    <EditText
                        android:layout_width="35dip"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText4"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/textView3"
                        android:layout_marginBottom="20dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nota 2"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/textView3"
