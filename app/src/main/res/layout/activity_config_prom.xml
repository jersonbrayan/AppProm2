                        android:layout_alignBaseline="@+id/editText3"
                        android:layout_marginBottom="20dip"
                        android:layout_marginRight="10dip" />

                    <EditText
                        android:layout_width="35dip"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
